{
    "name": "norman-huth/nova-detached-actions",
    "description": "A Laravel Nova tool to allow for placing actions in the Nova toolbar detached from the checkbox selection mechanism.",
    "keywords": [
        "laravel",
        "nova"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "laravel/nova": "^4.29.6",
        "norman-huth/nova-basic-package": "^1.2.6"
    },
    "autoload": {
        "psr-4": {
            "NormanHuth\\NovaDetachedActions\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NormanHuth\\NovaDetachedActions\\ToolServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
